<!DOCTYPE html>
<html>
  <head>
    <title>RateMyProfs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta property="og:title" content="Rate My Profs" />
    <meta property='og:image' content="<%= image_url('home.png') %>"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:description"
      content="Rate My Profs is a complete clone of Rate My Professors, a site where users go to review professors and schools in order to better inform prospecting students. This clone has all of the features of the original site and more."
    />
    <meta property="og:url"
      content="https://rate-my-profs.herokuapp.com/#/"
    />
    <% if current_user %>
      <script>
        window.current_user = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>",
          "first_name": "<%= current_user.first_name %>",
          "school_id": "<%= current_user.school_id %>",
          "prof_id": "<%= current_user.prof_id %>"
        }
      </script>
      
    <% end %>
    <script type='text/javascript'>
        window.logo="<%= image_url('rmp_logo.png')%>"
        window.books="<%= image_url('books.png')%>"
        window.logo_big="<%= image_url('logo_big.png')%>"
        window.pencil="<%= image_url('pencil.png')%>"
        window.anon="<%= image_url('anonymous.png')%>"
        window.like_dislike="<%= image_url('like_dislike.png') %>"
        window.github="<%= image_url('github.png') %>"
        window.linkedin="<%= image_url('linkedin.png') %>"
        window.blackboard="<%= image_url('blackboard.png') %>"
        window.prof_save_gif="<%= image_url('prof_save_gif.gif') %>"
        window.angel_list="<%= image_url('angel_list.png') %>"
        window.portfolio="<%= image_url('portfolio.png') %>"
    </script>
    <script src="https://kit.fontawesome.com/cf2a470cf5.js" crossorigin="anonymous"></script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
